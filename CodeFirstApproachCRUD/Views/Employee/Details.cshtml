@model CodeFirstApproachCRUD.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center fw-bold">Employee Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 border border-dark p-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9 border border-dark p-2">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3 border border-dark p-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9 border border-dark p-2">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3 border border-dark p-2">
                    @Html.DisplayNameFor(model => model.PostalCode)
                </dt>
                <dd class="col-sm-9 border border-dark p-2">
                    @Html.DisplayFor(model => model.PostalCode)
                </dd>
                <dt class="col-sm-3 border border-dark p-2">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-9 border border-dark p-2">
                    @Html.DisplayFor(model => model.Country)
                </dd>  
                <dt class="col-sm-3 border border-dark p-2">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-9 border border-dark p-2">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-3 border border-dark p-2">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-9 border border-dark p-2">
                    @Html.DisplayFor(model => model.Gender)
                </dd>
                <dt class="col-sm-3 border border-dark p-2">
                    @Html.DisplayNameFor(model => model.Department)
                </dt>
                <dd class="col-sm-9 border border-dark p-2">
                    @Html.DisplayFor(model => model.Department.DeptName)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.EmployeeId">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

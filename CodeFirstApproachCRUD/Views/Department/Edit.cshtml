@model CodeFirstApproachCRUD.Models.Department

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-header">
            <h3 class="text-center fw-bold">Edit Department</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DeptId" />
                <div class="form-group">
                    <label asp-for="DeptName" class="control-label"></label>
                    <input asp-for="DeptName" class="form-control" />
                    <span asp-validation-for="DeptName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeptHead" class="control-label"></label>
                    <input asp-for="DeptHead" class="form-control" />
                    <span asp-validation-for="DeptHead" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

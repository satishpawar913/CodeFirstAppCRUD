@model CodeFirstApproachCRUD.Models.Department

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h3 class="card-title text-center fw-bold">Create Department</h3>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DeptName" class="control-label">Department Name</label>
                    <input asp-for="DeptName" class="form-control" />
                    <span asp-validation-for="DeptName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeptHead" class="control-label">Department Head</label>
                    <input asp-for="DeptHead" class="form-control" />
                    <span asp-validation-for="DeptHead" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    if (performance.navigation.type === 1) {
        window.location.href = '@Url.Action("Create", "Department")';
    }
</script>
